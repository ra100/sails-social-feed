{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true
  },
  "rules": {
    "strict": [2, "never"],
    "semi": 2,
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [2, "single"],
    "no-labels": 1
  },
  "ecmaFeatures": {
    "blockBindings": true,
    "forOf": true,
    "jsx": true,
    "modules": true
  }
}
